<%= form_for(@contact) do |f| %>
  <%= render 'shared/error_messages_contact' %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :pin_code %><br />
    <%= f.number_field :pin_code %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :phone_Home %><br />
    <%= f.number_field :phone_number_home %>
  </div>
  <div class="field">
    <%= f.label :phone_Office %><br />
    <%= f.number_field :phone_number_office %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
    <%= f.hidden_field :account_id, :value => Account.find_by_remember_token(cookies[:remember_token]).id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
